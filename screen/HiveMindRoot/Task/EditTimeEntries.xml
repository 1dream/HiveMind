<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
        default-menu-title="Time" default-menu-index="1">

    <parameter name="workEffortId"/>

    <transition name="addTaskTime">
        <service-call name="mantle.work.TaskServices.add#TaskTime" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="editUser"><default-response url="../../User/EditUser"/></transition>

    <actions>
        <entity-find entity-name="TimeEntry" list="timeEntryList">
            <econdition field-name="workEffortId"/>
            <order-by field-name="fromDate"/>
            <order-by field-name="lastUpdatedStamp"/>
        </entity-find>
    </actions>
    <widgets>
        <form-single name="AddTaskTime" transition="addTaskTime">
            <field name="workEffortId"><default-field><hidden/></default-field></field>
            <field name="partyId"><default-field title="Worker">
                <drop-down no-current-selected-key="${ec.user.userAccount.partyId}" current="selected">
                    <entity-options key="${partyId}" text="${firstName} ${lastName} (${partyId})">
                        <entity-find entity-name="WorkEffortPartyAndPerson">
                            <date-filter/>
                            <econdition field-name="workEffortId"/>
                        </entity-find>
                    </entity-options>
                </drop-down>
            </default-field></field>
            <field name="rateTypeEnumId"><default-field title="Rate Type">
                <drop-down no-current-selected-key="RT_STANDARD"><entity-options key="${enumId}" text="${description}">
                    <entity-find entity-name="moqui.basic.Enumeration"><econdition field-name="enumTypeId" value="RateType"/></entity-find>
                </entity-options></drop-down>
            </default-field></field>
            <field name="comments"><default-field><text-area cols="60" rows="3"/></default-field></field>
            <field name="hours"><default-field><text-line size="5"/></default-field></field>
            <field name="fromDate"><default-field title="From"><date-time format="yyyy-MM-dd hh:mm"/></default-field></field>
            <field name="thruDate"><default-field title="Thru"><date-time format="yyyy-MM-dd hh:mm"/></default-field></field>
            <field name="breakHours"><default-field><text-line size="5"/></default-field></field>
            <field name="submitButton"><default-field title="Add Time"><submit/></default-field></field>

            <field-layout collapsible="true">
                <fields-not-referenced/>
                <field-group title="Enter Hours">
                    <field-ref name="hours"/>
                </field-group>
                <field-group title="OR From/Thru/Break">
                    <field-ref name="fromDate"/><field-ref name="thruDate"/><field-ref name="breakHours"/>
                </field-group>
                <field-ref name="submitButton"/>
            </field-layout>
        </form-single>
        <form-list name="TimeEntryList" list="timeEntryList" skip-form="true">
            <row-actions>
                <entity-find-one entity-name="mantle.humanres.rate.RateAmount" value-field="rateAmount"/>
            </row-actions>
            <!-- <field name="timeEntryId"><default-field title="ID"><display also-hidden="false"/></default-field></field> -->
            <field name="partyId"><default-field>
                <display-entity entity-name="Person" text="${firstName} ${lastName} (${partyId})" also-hidden="false"/>
                <link url="editUser" text="Edit User"/>
            </default-field></field>
            <field name="comments"><default-field><display also-hidden="false"/></default-field></field>
            <field name="hours"><default-field><display format="#.00" also-hidden="false"/></default-field></field>
            <field name="breakHours"><default-field title="Break"><display format="#.00" also-hidden="false"/></default-field></field>
            <field name="date"><default-field><display text="${fromDate?:''} - ${thruDate?:''}" also-hidden="false"/></default-field></field>
            <field name="amount">
                <conditional-field condition="rateAmount">
                    <display text="${hours*rateAmount.rateAmount}" currency-unit-field="rateAmount.rateCurrencyUomId"/>
                </conditional-field>
                <default-field><display text=""/></default-field>
            </field>
            <field name="invoice"><default-field><display text="${invoiceId?:''}:${invoiceItemSeqId?:''}" also-hidden="false"/></default-field></field>
        </form-list>
    </widgets>
</screen>

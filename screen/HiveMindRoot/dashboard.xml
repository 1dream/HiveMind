<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.2.xsd"
        default-menu-title="Dashboard">

    <transition name="createSpace">
        <service-call name="HiveMind.WikiServices.create#WikiSpace" in-map="context"/>
        <default-response url="."/>
    </transition>

    <transition name="createTask">
        <service-call name="mantle.work.ProjectServices.create#Task" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="createProject">
        <service-call name="mantle.work.ProjectServices.create#Project" in-map="context"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="WikiSpace" list="wikiSpaceList">
            <econditions combine="or">
                <econdition field-name="isPublic" value="Y"/>
                <!-- TODO: also include non-public spaces associated with current user -->
            </econditions>
        </entity-find>
        <entity-find entity-name="WorkEffortAndParty" list="myProjectList">
            <date-filter/>
            <econdition field-name="partyId" from="ec.user.userAccount.partyId"/>
            <econdition field-name="workEffortTypeEnumId" value="WET_TASK"/>
            <econdition field-name="purposeEnumId" value="WEP_PROJECT"/>
        </entity-find>
        <entity-find entity-name="WorkEffortAndParty" list="myTaskList">
            <date-filter/>
            <econdition field-name="partyId" from="ec.user.userAccount.partyId"/>
            <econdition field-name="workEffortTypeEnumId" value="WET_TASK"/>
            <econdition field-name="purposeEnumId" operator="not-equals" value="WEP_PROJECT"/>
            <econdition field-name="statusId" operator="not-in" value="WE_CLOSED,WE_CANCELLED"/>
            <order-by field-name="priority"/>
        </entity-find>
    </actions>
    <widgets>
        <container id="dashboard-wiki-section">
            <container style="ui-helper-clearfix">
                <container id="dashboard-wiki-title"><label text="Wiki Spaces" type="h1"/></container>
                <container id="dashboard-wiki-links">
                    <container-dialog id="NewSpaceContainer" button-text="New Space">
                        <form-single name="NewSpace" transition="createSpace">
                            <field name="wikiSpaceId"><default-field><text-line size="8"/></default-field></field>
                            <field name="description"><default-field><text-line size="40"/></default-field></field>
                            <field name="isPublic"><default-field>
                                <drop-down><option key="Y"/><option key="N"/></drop-down>
                            </default-field></field>
                            <field name="rootPageDirectory"><default-field>
                                <drop-down combo-box="true">
                                    <option key="runtime/WikiSpace"/>
                                    <option key="content://main/HiveMind/WikiSpace"/>
                                    <option key="dbresource://HiveMind/WikiSpace"/>
                                </drop-down>
                            </default-field></field>
                            <!--
                            <field name="rootPageLocation"><default-field title="Root Page">
                                <text-line size="60" default-value="component://HiveMind/WikiSpace/\${wikiSpaceId}.cwiki"/>
                            </default-field></field>
                            -->

                            <field name="submitButton"><default-field title="Create Space"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </container>
            </container>

            <form-list name="WikiSpaces" list="wikiSpaceList" skip-start="true" skip-end="true">
                <field name="viewLink"><default-field title="Space">
                    <link text="${wikiSpaceId}" url="wiki/${wikiSpaceId}" url-type="plain"/>
                </default-field></field>
                <field name="description"><default-field><display/></default-field></field>
            </form-list>
        </container>
        <container id="dashboard-tasks-section">
            <!-- my top tasks, my projects, etc -->
            <container-dialog id="NewTaskContainer" button-text="New Task">
                <form-single name="NewTask" transition="createTask">
                    <field name="rootWorkEffortId"><default-field title="Project">
                        <drop-down><list-options list="myProjectList" key="workEffortId" text="${workEffortName}"/></drop-down>
                    </default-field></field>
                    <!-- TODO: parent task server-side autocomplete -->
                    <field name="workEffortName"><default-field title="Task Name"><text-line/></default-field></field>
                    <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                </form-single>
            </container-dialog>
            <container-dialog id="MyProjectsContainer" button-text="My Projects">
                <form-list name="MyProjects" list="myProjectList">
                    <!-- TODO: change to link to Project page once implemented -->
                    <field name="workEffortName"><default-field title="Name"><display/></default-field></field>
                    <field name="statusId"><default-field title="Status">
                        <display-entity entity-name="StatusItem" text="${description}"/>
                    </default-field></field>
                    <!-- TODO: add stats (# tasks by status, percent complete, etc) -->
                </form-list>
            </container-dialog>
            <container-dialog id="NewProjectContainer" button-text="New Project">
                <form-single name="NewProject" transition="createProject">
                    <field name="workEffortName"><default-field title="Project Name"><text-line/></default-field></field>
                    <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                </form-single>
            </container-dialog>
            <label text="My Open Tasks" type="h2"/>
            <form-list name="MyTasks" list="myTaskList">
                <!-- TODO: change to link to Task page once implemented -->
                <field name="workEffortName"><default-field title="Name"><display/></default-field></field>
                <field name="priority"><default-field><display/></default-field></field>
                <field name="statusId">
                    <!-- don't show this, unneeded complexity
                    <header-field title="Status">
                        <drop-down allow-empty="true"><entity-options text="${description}">
                            <entity-find entity-name="StatusItem">
                                <econdition field-name="statusTypeId" value="WorkEffort"/>
                                <order-by field-name="sequenceNum"/>
                            </entity-find>
                        </entity-options></drop-down>
                    </header-field> -->
                    <default-field title="Status"><display-entity entity-name="StatusItem" text="${description}"/></default-field>
                </field>
            </form-list>
        </container>
        <container id="dashboard-requests-section">
            <label text="Requests" type="h1"/>
            <!-- my requests, etc -->
        </container>
    </widgets>
</screen>
